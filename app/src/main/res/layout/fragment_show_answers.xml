            android:layout_marginTop="518dp"
            android:layout_marginEnd="162dp"
            android:layout_marginBottom="165dp"
            android:text="Replay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
