<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultQuestionsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/questionMenu1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="112dp"
            android:layout_marginTop="44dp"
            android:background="#939393"
            android:gravity="center"
            android:text="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/questionMenu2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="44dp"
            android:background="#939393"
            android:gravity="center"
            android:text="2"
            app:layout_constraintStart_toEndOf="@+id/questionMenu1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/questionMenu3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="44dp"
            android:background="#939393"
            android:gravity="center"
            android:text="@string/_3"
            app:layout_constraintStart_toEndOf="@+id/questionMenu2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/questionMenu4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="44dp"
            android:background="#939393"
            android:gravity="center"
            android:text="4"
            app:layout_constraintStart_toEndOf="@+id/questionMenu3"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/questionMenu5"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="44dp"
            android:background="#939393"
            android:gravity="center"
            android:text="5"
            app:layout_constraintStart_toEndOf="@+id/questionMenu4"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/correctAnswersText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="112dp"
            android:layout_marginTop="16dp"
            android:text="Correct Asnwers = "
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/questionMenu3" />

        <TextView
            android:id="@+id/correctAnswersNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/correctAnswersText"
            app:layout_constraintTop_toBottomOf="@+id/questionMenu3" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>