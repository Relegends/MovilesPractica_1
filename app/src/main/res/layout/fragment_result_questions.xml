<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultQuestionsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/questionMenu1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="112dp"
                android:layout_marginTop="44dp"
                android:background="#939393"
                android:gravity="center"
                android:text="1" />

            <TextView
                android:id="@+id/questionMenu5"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="44dp"
                android:background="#939393"
                android:gravity="center"
                android:text="5" />

            <TextView
                android:id="@+id/questionMenu2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="44dp"
                android:background="#939393"
                android:gravity="center"
                android:text="2" />

            <TextView
                android:id="@+id/questionMenu3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="44dp"
                android:background="#939393"
                android:gravity="center"
                android:text="3" />

            <TextView
                android:id="@+id/questionMenu4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="44dp"
                android:background="#939393"
                android:gravity="center"
                android:text="4" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/correctAnswersText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="16dp"
        android:text="Correct Asnwers = "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionMenu3" />

    <TextView
        android:id="@+id/correctAnswersNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/correctAnswersText"
        app:layout_constraintTop_toBottomOf="@+id/questionMenu3" />

</FrameLayout>